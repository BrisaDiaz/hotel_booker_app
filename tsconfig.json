{

  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
            "@/queries/*": [
              "queries/*"
            ],
      "@/mocks/*": ["mocks/*"],
      "@/interfaces/*": ["interfaces/*"],
            "@/hooks/*": [
              "hooks/*"
            ],
      "@/utils/*": ["utils/*"],
      "@/context/*": ["context/*"],
        "@/graphql/*": [
          "graphql/*"
        ],
        "@/lib/*": [
              "lib/*"
            ],

  "@/env": [
    "env.ts"
  ],
    },

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "prisma/seed.ts", "prisma/seed.jss"],
  "exclude": ["node_modules"]
}
